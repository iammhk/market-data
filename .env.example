# Environment variables for Market Data Fetcher
# Copy this file to .env and fill in your actual credentials

# Zerodha KiteConnect API Credentials
ZERODHA_API_KEY=your_zerodha_api_key_here
ZERODHA_ACCESS_TOKEN=your_zerodha_access_token_here
ZERODHA_REQUEST_TOKEN=your_zerodha_request_token_here

# Alpha Vantage API (for additional financial data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./data/market_data.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=market_data.log

# Data Storage
DATA_DIRECTORY=./data
ENABLE_CSV_EXPORT=true
ENABLE_JSON_EXPORT=false

# API Rate Limits (requests per minute)
NSE_RATE_LIMIT=30
YAHOO_RATE_LIMIT=60
ZERODHA_RATE_LIMIT=600

# Default Settings
DEFAULT_PERIOD=1mo
DEFAULT_INTERVAL=1d
ENABLE_NOTIFICATIONS=false
